{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "pretty": true,
    "removeComments": false,
    "strict": true,
    "target": "es2015",
    "declarationDir": "./lib",
    "outDir": "./lib"
  },
  "include": [
    "./src/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "**/node_modules/*"
  ]
}
